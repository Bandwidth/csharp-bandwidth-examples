@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <form action="@Url.Action("Call")" method="POST" class="form-inline">
        <div class="form-group">
            <div class="input-group">
                <input class="form-control" name="phoneNumber" placeholder="Number to call back from @ViewBag.PhoneNumber"/>
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-default">Call</button>
                </span>
            </div>
        </div>
    </form>
</div>